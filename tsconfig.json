{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/components/ClassSelect.vue"],
  "exclude": ["node_modules"]
}
